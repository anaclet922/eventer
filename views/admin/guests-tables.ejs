<%- include('./includes/header') %>


    <%- include('./includes/nav') %>






        <section class="title-section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-center pb-3">
                            <%= locals.title %>
                        </h2>

                        <div class="justify-content-between">
                            <a href="/adimini/invite" class="btn btn-primary">Back to List</a>
                            <a href="javascript:void(0)" class="btn btn-secondary" onclick="printDiv('printable-area')">Print</a>
                        </div>






                        <div class="row" id="printable-area">


                            <% guests.forEach((guest_group, index)=> { %>


                                <div class="col-md-3">

                                    <div class="card shadow-lg p-4">
                                        <div class="card-header">
                                            <h4>Table #<%= index + 1 %>
                                            </h4>
                                        </div>
                                        <div class="card-body">

                                            <% guest_group.forEach((guest_g, index)=> { %>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <%= guest_g.names %>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <%= guest_g.phone %>
                                                    </div>
                                                </div>
                                                <% }); %>

                                        </div>
                                    </div>
                                </div>
                                <% }); %>







                        </div>







                    </div>
                </div>
            </div>
        </section>












<script>
    function printDiv(divId) {
     var printContents = document.getElementById(divId).innerHTML;
     var originalContents = document.body.innerHTML;

     document.body.innerHTML = printContents;

     window.print();

     document.body.innerHTML = originalContents;
}
</script>




