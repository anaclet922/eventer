<%- include('./includes/header') %>


    <%- include('./includes/nav') %>






        <section class="title-section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-center pb-3">
                            <%= locals.title %>
                        </h2>
                        <div class="card shadow-lg p-4">
                            <div class="card-body">








                                <table id="example" class="table table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Names</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Country</th>
                                            <th>Hotel</th>
                                            <th>Dates</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Names</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Country</th>
                                            <th>Hotel</th>
                                            <th>Dates</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                      


                                        <% bookings.forEach((booking, index)=> { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= booking.names %></td>
                                                <td><%= booking.email %></td>
                                                <td><%= booking.phone %></td>
                                                <td><%= booking.country %></td>
                                                <td><%= booking.name %></td>
                                                <td><%= locals.getFormatedDate(booking.checkin) + ' to ' + locals.getFormatedDate(booking.checkout) %></td>
                                            </tr>
                                            <% }); %>

                                        
                                    </tfoot>
                                </table>

















                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>








        <script>
            $(document).ready(function () {
                $('#example').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        'copyHtml5',
                        'excelHtml5',
                        'csvHtml5',
                        'pdfHtml5'
                    ]
                });
            });
        </script>



        <%- include('./includes/footer') %>