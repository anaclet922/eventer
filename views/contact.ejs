<%- include('./includes/header') %>




    <div class="top-row">
        <div class="row top-row-background-only">
            <div class="col-md-7">
                <%- include('./includes/nav') %>
                    <div class="container">
                        <h1 class="booking-title">Let's Talk Further</h1>
                    </div>
            </div>
            <div class="col-md-5" style="padding: 1.5rem;background: rgba(255, 255, 255, 0.3);">


                <section class="register-section">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <h1 class="text-center pb-3 text-white">Contact Us</h1>
                                <!-- <p class="text-center text-white">Please fill out the following form and we will get
                                    back to
                                    you
                                    shortly.
                                </p> -->
                                <div class="card shadow-lg p-4">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-md-12">

                                                <h3>Let's Talk Further</h3>
                                                <p>Please fill out the following form and we will get back to you
                                                    shortly
                                                </p>
                                                <form action="" method="post" class="form">
                                                    <div class="mb-3">
                                                        <label class="form-label">Names</label>
                                                        <input type="text" class="form-control form-control-lg" required
                                                            placeholder="Name" name="names" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Email</label>
                                                        <input type="email" class="form-control form-control-lg"
                                                            required placeholder="Email" name="names" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Message</label>
                                                        <textarea class="form-control form-control-lg" required
                                                            placeholder="Message" name="message"></textarea>
                                                    </div>
                                                    <p class="text-center">
                                                        <button type="submit" class="btn btn-primary btn-lg ">
                                                            Send
                                                            <i class="fa-solid fa-paper-plane"></i>
                                                        </button>
                                                    </p>
                                                </form>
                                            </div>

                                            <div class="col-md-12 d-flex justify-content-center align-items-center">
                                                <div class="row px-4">


                                                    <div class="col-md-12 mb-3">
                                                        <a href="tel:<%= locals.configs['contact_phone'] %>"
                                                            class="contact-links"><span><i
                                                                    class="fa-solid fa-phone"></i></span>
                                                            <span style="margin-left: 10px;">
                                                                <%= locals.configs['contact_phone'] %>
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <a href="mailto:<%= locals.configs['contact_email'] %>"
                                                            class="contact-links"><span></span><i
                                                                class="fa-solid fa-envelope"></i></span>
                                                            <span style="margin-left: 10px;">
                                                                <%= locals.configs['contact_email'] %>
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <a href="javascript:void(0)"
                                                            class="contact-links"><span></span><i
                                                                class="fa-solid fa-location-dot"></i></span>
                                                            <span style="margin-left: 10px;">
                                                                <%= locals.configs['contact_location'] %>
                                                            </span>
                                                        </a>
                                                    </div>



                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>



            </div>
        </div>
    </div>




    <%- include('./includes/footer') %>