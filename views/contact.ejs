<%- include('./includes/header') %>


    <%- include('./includes/nav') %>






        <section class="register-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="text-center pb-3">Contact Us</h2>
                        <p class="text-center">Please fill out the following form and we will get back to you shortly.
                        </p>
                        <div class="card shadow-lg p-4">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md-6">

                                        <h3>Let's Talk Further</h3>
                                        <p>Please fill out the following form and we will get back to you shortly</p>
                                        <form action="" method="post" class="form">
                                            <div class="mb-3">
                                                <label class="form-label">Names</label>
                                                <input type="text" class="form-control form-control-lg" required
                                                    placeholder="Name" name="names" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Email</label>
                                                <input type="email" class="form-control form-control-lg" required
                                                    placeholder="Email" name="names" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Message</label>
                                                <textarea class="form-control form-control-lg" required
                                                    placeholder="Message" name="message"></textarea>
                                            </div>
                                            <p class="text-center">
                                                <button type="submit" class="btn btn-primary btn-lg ">
                                                    Send
                                                    <i class="fa-solid fa-paper-plane"></i>
                                                </button>
                                            </p>
                                        </form>
                                    </div>
                                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                                        <div class="row px-4">
                                            
                
                                            <div class="col-md-12 mb-3">
                                                <a href="tel:<%= locals.configs['contact_phone'] %>"><span style="text-decoration: none !important;"><i class="fa-solid fa-phone"></i></span> <%= locals.configs['contact_phone'] %></a>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <a href="mailto:<%= locals.configs['contact_email'] %>"><span style="text-decoration: none !important;"></span><i class="fa-solid fa-envelope"></i></span> <%= locals.configs['contact_email'] %></a>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <a href="javascript:void(0)"><span style="text-decoration: none !important;"></span><i class="fa-solid fa-location-dot"></i></span> <%= locals.configs['contact_location'] %></a>
                                            </div>



                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>









        <%- include('./includes/footer') %>